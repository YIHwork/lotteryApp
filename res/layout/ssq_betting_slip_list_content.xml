<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/jjc_list_item_topline"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jjc_list_item_bg"
        style="@style/chooseballPagePaddingStyle01"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ssq_betting_slip_list_content_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_digist_listview_delete" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/ssq_betting_slip_list_content_delete" >

            <TextView
                android:id="@+id/ssq_betting_slip_list_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ssq_betting_slip_list_num_format"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/ssq_betting_slip_list_multiple_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ssq_betting_slip_list_multiple_msg_format"
                android:textColor="@color/grey"
                android:textSize="12sp" />
        </LinearLayout>

        
    </RelativeLayout>

</LinearLayout>
